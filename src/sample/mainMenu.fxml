<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="sample.Controller" maxHeight="500.0" maxWidth="300.0" minHeight="500.0" minWidth="300.0" prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Pane maxHeight="35.0" maxWidth="300.0" minHeight="35.0" minWidth="300.0" prefHeight="35.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" maxHeight="35.0" maxWidth="300.0" minHeight="35.0" minWidth="300.0" prefHeight="35.0" prefWidth="300.0" text="Name Sayer" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
   <center>
      <Pane maxHeight="400.0" maxWidth="300.0" minHeight="400.0" minWidth="300.0" prefHeight="400.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="listView" layoutX="25.0" maxHeight="400.0" maxWidth="250.0" minHeight="400.0" minWidth="250.0" onMouseClicked="#handleListClicked" prefHeight="400.0" prefWidth="250.0" />
         </children></Pane>
   </center>
   <bottom>
      <Pane maxHeight="50.0" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="practiceButton" layoutX="208.0" layoutY="12.0" mnemonicParsing="false" onAction="#onPracticeAction" text="Practice" underline="true">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <CheckBox fx:id="randomBox" layoutX="14.0" layoutY="16.0" mnemonicParsing="false" text="Randomise" />
         </children>
      </Pane>
   </bottom>
</BorderPane>
